@using HRMWeb.Helpers
@model IEnumerable<HRMEntity.UserEntity>
@{
    ViewBag.Title = "Manage Employee";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Show All Employee
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="tblUsers">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>User Name</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.Role)</th>
                        <th>Designation</th>
                        <th>Manager Name</th>
                        <th>Date Of Joining</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    @Html.Raw("Enabled")
                                }
                                else
                                {
                                    @Html.Raw("Disabled")
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Role)</td>
                            <td>@Html.DisplayFor(modelItem => item.DesignationName)</td>
                            <th>@Html.DisplayFor(modelItem => item.ManagerName)</th>
                            <td>
                                @if (item.DOJ.HasValue)
                                {
                                    @item.DOJ.Value.ToString("MM/dd/yyyy")
                                }
                            </td>
                            @*<td>@HRMHtmlHelper.DisplayLocalTime(Html, item.CreatedOn)  </td>
                              <td>@HRMHtmlHelper.DisplayLocalTime(Html, item.UpdatedOn) </td>*@
                            <td>
                                @Html.ActionLink("Edit", "EditUser", new { id = item.UserId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblUsers').DataTable({
                responsive: true
            });
        });
    </script>
}

